{% comment %} 
        Snap Card Component for Product Detail Page 
{% endcomment %}

<section
  id="snapCardComponent-{{ section.id }}"
  class="component component-animation relative grid items-start min-h-[496px] bg-grey"
  style="margin-top: {{ section.settings.margin_top }}px; margin-bottom: {{ section.settings.margin_bottom }}px;">
  <div class="absolute inset-0 overflow-hidden focal-point-center">
    {% if product and product.featured_image %}
      <picture>
        <source
          media="(min-aspect-ratio: 16/9)"
          width="1600"
          height="900"
          sizes="100vw"
          srcset="{{ product.featured_image | image_url: width: 1600 }}">
        <source
          media="(min-aspect-ratio: 1/1)"
          width="900"
          height="900"
          sizes="100vw"
          srcset="{{ product.featured_image | image_url: width: 900 }}">
        <img
          loading="lazy"
          alt="{{ product.featured_image.alt | escape }}"
          class="w-full h-full object-cover"
          src="{{ product.featured_image | image_url: width: 1200 }}"
          width="506"
          height="900"
          sizes="100vw">
      </picture>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Product Snap Card",
    "tag": "section",
    "class": "snap-card",
    "settings": [
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Margin Top",
        "default": 40
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 200,
        "step": 5,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 40
      }
    ],
    "presets": [
      {
        "name": "Product Snap Card"
      }
    ]
  }
{% endschema %}