{% comment %}theme-check-disable UnusedAssign{% endcomment %}
{%- liquid
  assign layout = 'index-chart'
  if "ar he he-IL hi" contains localization.language.iso_code
    assign rtl = '-rtl'
  endif

  assign store_width = settings.container_max_width

  if section.settings.section_width == 'custom'
    assign store_width = section.settings.container_max_width
  endif

  if template.suffix contains 'store-width-'
      assign store_width = template.suffix | split: 'store-width-' | last | plus: 0
  endif
-%}
{{ 'circle-chart' | append: rtl | append: '.css' | asset_url | stylesheet_tag }}
{% render 'section-wrapper', placement: 'top' %}

<div class="{% render 'section-class', layout: layout %}" {% render 'section-style', layout: layout %}>
  <div class="{% render 'section-container-class', layout: layout %}">
    {% render 'section-heading', section: section %}
    <smart-row>
      <div class="circle-chart-row row g-3 gx-lg-5 justify-content-center">
        {%- for block in section.blocks -%}
          <div class="col-auto" {{ block.shopify_attributes }}>
            <div class="circle-chart-container">
              {%- case block.type -%}
                {%- when 'chart' -%}
                  <svg class="circle-chart  circle-chart--color{{ block.settings.color }}" viewbox="0 0 33.83098862 33.83098862" xmlns="http://www.w3.org/2000/svg">
                    <circle stroke-width="2" fill="none" cx="16.91549431" cy="16.91549431" r="15.91549431"/>
                    <circle class="circle-chart-circle" stroke="#0067ff" stroke-width="3.2" stroke-dasharray="{{ block.settings.percent }},100" stroke-dashoffset="{{ block.settings.percent }}" fill="none" cx="16.91549431" cy="16.91549431" r="15.91549431"/>
                  </svg>
                  <span class="circle-chart-percentage">
                    <span class="circle-chart-percentage-number">{{ block.settings.percent }}%</span>
                    <span class="circle-chart-percentage-text">{{ block.settings.heading }}</span>
                  </span>
                {%- else -%}
                  {%- liquid
                    assign percent = block.settings.value | times: 100 | divided_by: block.settings.max
                  -%}
                  <svg class="circle-chart circle-chart--color{{ block.settings.color }}" viewbox="0 0 33.83098862 33.83098862" xmlns="http://www.w3.org/2000/svg">
                    <circle stroke-width="2" fill="none" cx="16.91549431" cy="16.91549431" r="15.91549431"/>
                    <circle class="circle-chart-circle"  stroke-width="3.2" stroke-dasharray="{{ percent }},100" stroke-dashoffset="{{ percent }}" fill="none" cx="16.91549431" cy="16.91549431" r="15.91549431"/>
                  </svg>
                  <span class="circle-chart-percentage">
                    <span class="circle-chart-percentage-number">{{ block.settings.value }}{{ block.settings.unit }}</span>
                    <span class="circle-chart-percentage-text">{{ block.settings.heading }}</span>
                  </span>
                {%- endcase -%}
            </div>
          </div>
          <div class='line-break'></div>
        {%- endfor -%}
      </div>
    </smart-row>
    <div class="text-center mt-5 mx-auto" style="max-width: 730px">
      {{ section.settings.text }}
    </div>
  </div>
</div>
