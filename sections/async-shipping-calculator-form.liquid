{% comment %}theme-check-disable ImgWidthAndHeight, ImgLazyLoading{% endcomment %}
{%- if settings.shipping_calculator_static -%}
  <div id="shipping_results">
    <form id="shipping_calculator">
      <div class="tab-accordion-item-content-inside">
        <div>
          {{ settings.shipping_calculator_static_top_info }}
        </div>
        <div class="mt-2"></div>
        {% for i in (1..3) %}
          {%- assign i = 1 -%}
          {% capture show %}shipping_calculator_static_supplier_{{ i }}_enable{% endcapture %}
          {% capture name %}shipping_calculator_static_supplier_{{ i }}_name{% endcapture %}
          {% capture description %}shipping_calculator_static_supplier_{{ i }}_description{% endcapture %}
          {% capture price %}shipping_calculator_static_supplier_{{ i }}_price{% endcapture %}
          {% capture logo %}shipping_calculator_static_supplier_{{ i }}_image{% endcapture %}
          {%- if settings[show] -%}
            <div class="minicart-prd">
              <div class="minicart-prd-inside row">
                <div class="minicart-prd-image image-hover-scale-circle col">
                  {%- if settings[logo] != blank -%}
                    {% render 'image-container',
                      image: settings[logo],
                      padding_no_bg: 100,
                      padding: 100,
                      sizes: '115px',
                    %}
                  {%- else -%}
                    <div class="image-container" style="padding-bottom: 100%;">
                      <img src="{{ 'shipping-default.jpg' | asset_img_url: '230x260' }}" alt="" width="230" height="230" class="" sizes="115px">
                    </div>
                  {%- endif -%}
                </div>
                <div class="minicart-prd-info col">
                  <h3 class="minicart-prd-name ">{{ settings[name] }}</h3>
                  <div class="minicart-prd-description">{{ settings[description] }}</div>
                  <div class="minicart-prd-info-bottom row">
                    <div class="col-sm-auto minicart-prd-price">
                      <div class="prd-price">
                        <div class="prd-price-regular">{{ settings[price] }}</div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="minicart-prd-action">
                  <span  class="icon-wrap icon-remove cart-item__[success]" data-toggle="tooltip" data-tippy-content="{{ 'theme.general.static_shipping_tooltip' | t }}" data-tippy-placement="left">{% render 'icon-check2' %}</span>
                </div>
              </div>
            </div>
          {%- endif -%}
        {% endfor %}
      </div>
      <div class="minicart-drop-text mt-2">
          * {{ 'theme.general.shipping_description' | t }}
      </div>
    </form>
  </div>
{%- else -%}
  <div id="shipping_results"></div>
  <form id="shipping_calculator">
    <div class="tab-accordion-item-content-inside">
      <div>
        {{ 'theme.general.enter_your_destination' | t }}:
      </div>
      <div class="mt-2"></div>
      <div class="form-group">
        <label for="country">{{ 'theme.general.country' | t }}</label>
        <div class="form-control-wrap form-control-wrap--select">
          <select class="form-select" id="country" type="text" name="shipping_address[country]" data-default="{% if shop.customer_accounts_enabled and customer %}{{ customer.default_address.country }}{% elsif settings.shipping_calculator_default_country %}{{ settings.shipping_calculator_default_country }}{% endif %}">
            {{ country_option_tags | replace: '<option value="---" data-provinces="[]">---</option>', '' }}
          </select>
        </div>
      </div>
      <div class="form-group">
        <label for="province">{{ 'theme.general.province' | t }}</label>
        <div class="form-control-wrap form-control-wrap--select">
          <select class="form-select" id="province" type="text" name="shipping_address[province]" data-default="{% if shop.customer_accounts_enabled and customer and customer.default_address.province %}{{ customer.default_address.province }}{% endif %}"></select>
        </div>
      </div>
      <div class="form-group">
        <label for="zip">{{ 'theme.general.zip' | t }}</label>
        <div class="form-control-wrap">
          <input id="zip" class="form-control" required placeholder="{{ 'theme.general.zip_placeholder' | t }}" type="text" name="shipping_address[zip]" {% if shop.customer_accounts_enabled and customer %} value="{{ customer.default_address.zip }}"{% endif %}>
        </div>
      </div>
    </div>
    <div id="shipping-error" class="mt-1 cart-item__error hidden"><small class="cart-item__error-text"></small>{% render 'icon-alert' %}</div>
    <button class="btn mt-2 position-relative" aria-label="{{ 'theme.general.calculate' | t }}">
      <div class="loading-overlay__spinner hidden">
        <div data-load="loading"></div>
      </div>
      <span>{{ 'theme.general.calculate' | t }}</span>
    </button>
    <div class="minicart-drop-text mt-2">
        * {{ 'theme.general.shipping_description' | t }}
    </div>

    <template class="meta">
      <div class="mb-2">{{ 'theme.general.shipping_rates_to' | t }} [country] [province] [zip]:</div>
    </template>
    <template class="list">
      <div class="minicart-prd">
        <div class="minicart-prd-inside row">
          <div class="minicart-prd-image image-hover-scale-circle col">
            <div class="image-container" style="padding-bottom: 100%;">
              <img src="[image]" alt="" width="230" height="230" class="" sizes="115px">
            </div>
          </div>
          <div class="minicart-prd-info col">
            <h3 class="minicart-prd-name ">[title]</h3>
            <dl>
              <div class="cart-table-product-option [delivery_days_class]">
                <dt>{{ 'theme.general.delivery_days' | t }}: </dt>
                <dd>[delivery_days]</dd>
              </div>
              <div class="cart-table-product-option [delivery_date_class]">
                <dt>{{ 'theme.general.delivery_date' | t }}: </dt>
                <dd>[delivery_date]</dd>
              </div>
              <div class="cart-table-product-option [delivery_range_class]">
                <dt>{{ 'theme.general.delivery_range' | t }}: </dt>
                <dd>[delivery_range]</dd>
              </div>
            </dl>
            <div class="minicart-prd-info-bottom row">
              <div class="col-sm-auto minicart-prd-price">
                <div class="prd-price">
                  <div class="prd-price-regular "><span>{{ localization.country.currency.symbol }}</span>[price] [currency]</div>
                </div>
              </div>
            </div>
          </div>
          <div class="minicart-prd-action">
            <span  class="icon-wrap icon-remove cart-item__[success]" data-toggle="tooltip" data-tippy-content="[tooltip]" data-tippy-placement="left">{% render 'icon-check2' %}</span>
          </div>
        </div>
      </div>
    </template>
  </form>
{%- endif -%}