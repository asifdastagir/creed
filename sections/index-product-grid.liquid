          "value": "mini_horizontal",
          "label": "Mini horizontal"
        },
        {
          "value": "mini_horizontal_banner",
          "label": "Mini horizontal with banner"
        },
        {
          "value": "max_horizontal",
          "label": "Max horizontal"
        },
