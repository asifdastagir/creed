{% comment %}theme-check-disable NestedSnippet{% endcomment %}
{%- liquid
  assign layout = 'index-product-grid'
  if section.settings.fluid and section.settings.layout != 'mini_horizontal_banner'
    assign container = '-fluid'
  endif

  if section.settings.layout == 'mini_horizontal_banner'
    assign container = container | append: ' has-strict-width'
  endif

  assign ic_style = ''
  assign color = section.settings.color_placeholder

  if color != 'rgba(0,0,0,0)' and color != blank
    assign ic_style = '--placeholder-bg: ' | append: color | append: ';'
  endif

  assign centerInsufficientSlides = false

  if section.settings.layout == 'mini_horizontal' or section.settings.layout == 'max_horizontal'
    if section.settings.slides_per_column == "1"
      assign centerInsufficientSlides = true
    endif
  endif

  assign per_row = section.settings.per_row

  if section.settings.layout == 'max_horizontal' and per_row == "6"
    assign per_row = "5"
  endif

  if per_row == "5" and section.settings.fluid == false or section.settings.layout == 'mini_horizontal' or section.settings.layout == 'max_horizontal'
    assign per_row = "4"
  endif

  assign button_show_more = false
  if section.settings.button
    if section.settings.heading_alignment == 'left'
      assign button_show_more = true
    elsif section.settings.layout != 'mini_horizontal_banner'
      assign button_show_more = true
    endif
  endif

  assign show_button = false
  assign button_center = false
  assign button_left = false

  if button_show_more and section.settings.layout != 'mini_horizontal_banner'
    assign show_button = true
  endif

  if show_button and section.settings.heading_alignment == 'center'
    assign button_center = true
  endif

  if show_button and section.settings.heading_alignment == 'left' and section.settings.button_bottom_on_mobile
    assign button_left = true
  endif
-%}
{% render 'section-wrapper', placement: 'top' %}

<div class="{% render 'section-class', layout: layout %}" {% render 'section-style', layout: layout %}>
  <div class="{% render 'section-container-class', layout: layout %}">

    {%- if section.settings.layout == 'mini_horizontal_banner' -%}
      <div class="row gy-4 {% if section.settings.mini_horizontal_banner_reversed %}flex-row-reverse{% endif %}">
        <div class="col-sm-6 col-lg-4">
          
          <flow-type>
            <a href="{{ section.settings.button_url }}" class="bnr-wrap">
              <div class="bnr to-center to-bottom text-center min-w-100" data-fontratio="3.63">
                <swiper-carousel class="min-w-100">
                  <div class="swiper-container categories-carousel">
                    <div class="swiper-wrapper">
                      {%- if section.settings.image != blank -%}
                      <div class="swiper-slide min-w-100">
                        {% render 'image-container',
                          image: section.settings.image,
                          sizes: '264px',
                          class_ic: 'bnr-img',
                          style: ic_style
                        %}
                      </div>
                      {%- endif -%}
                      {%- if section.settings.image_2 != blank -%}
                        <div class="swiper-slide min-w-100">
                          {% render 'image-container',
                            image: section.settings.image_2,
                            sizes: '264px',
                            class_ic: 'bnr-img',
                            style: ic_style
                          %}
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                  <div class="swiper-pagination {% if section.settings.invert_color %}colorize-invert{% endif %}"></div>
                  <script type="application/json">
                  {
                    "pagination": {
                        "el": ".swiper-pagination",
                        "clickable": true
                    },
                    "watchOverflow": true,
                    "slidesPerView": 1,
                    "spaceBetween": 0,
                    "effect": "fade",
                    "autoplay": {
                        "delay": 5000
                    }
                  }
                  </script>
                </swiper-carousel>
                <div class="bnr-caption {% if section.settings.invert_color %}colorize-invert{% endif %}" style="--padding: 20% 3%; --padding-mobile: 20% 3%; --caption-width: 100%; --caption-width-mobile: 100%;">
                  <div class="bnr-text2 mt-0" style="font-size:.15em; font-weight: 400">{{ section.settings.banner_title }}</div>
                  <div class="bnr-text1 mt-sm" style="font-family: var(--heading-font-family); font-size:.29em; font-weight: var(--font-weight-700);">{{ section.settings.banner_subtitle }}</div>
                </div>
              </div>
            </a>
				  </flow-type>

        </div>
        <div class="col-sm-6 col-lg-8">
          {% render 'section-heading', section: section, left: 1 %}
          <div class="products-sm-list">
            {%- for product in collections[section.settings.collection].products limit: section.settings.limit -%}
              {% render 'product-card-horizontal-xs', product: product %}
            {%- else -%}
              {%- for i in (1..section.settings.limit) -%}
                {% render 'product-placeholder', padding: 18, class: 'prd-prw-sm' %}
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    {%- else -%}
      {% render 'section-heading', section: section %}

      {%- if section.settings.layout == 'default' -%}
        <smart-row>
          <div class="prd-grid row row-cols-xxs-1 row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-{{ per_row }} g-3 g-md-{{ per_row }} justify-content-center">
            {%- for product in collections[section.settings.collection].products limit: section.settings.limit -%}
              <div class="col">{% render 'product-card', product: product, collection: section.settings.collection %}</div>
              <div class='line-break'></div>
            {%- else -%}
              {%- for i in (1..section.settings.limit) -%}
                {% render 'product-placeholder', class: 'col' %}
              {%- endfor -%}
            {%- endfor -%}
          </div>
        </smart-row>
      {%- elsif section.settings.layout == 'mini_horizontal'  -%}
        <swiper-carousel data-destroy>
          <div class="swiper-container swiper-container-prd-carousel swiper-container-center">
            <div class="swiper-wrapper">
              {%- for product in collections[section.settings.collection].products limit: section.settings.limit -%}
                <div class="swiper-slide">{% render 'product-card-horizontal-sm', product: product %}</div>
              {%- else -%}
                {%- for i in (1..10) -%}
                {% render 'product-placeholder', padding: 28, style: 'w-100' %}
                {%- endfor -%}
              {%- endfor -%}
            </div>
            <div class="swiper-pagination position-relative mt-3 mt-md-4"></div>
          </div>
          <script type="application/json">
            {
              "pagination": {
                "el": ".swiper-pagination",
                "clickable": true
              },
              "slidesPerColumnFill": "row",
              "watchOverflow": true,
              "slidesPerView": 1,
              "slidesPerColumn": 1,
              "spaceBetween": 20,
              "centerInsufficientSlides": true,
              "breakpointsBase": "container",
              "breakpoints": {
                "{{ settings.product_card_one_in_row_width }}": {
                  "slidesPerView": 1,
                  "slidesPerColumn": {{ section.settings.slides_per_column | at_most: 2 }},
                  "spaceBetween": 20
                },
                "575": {
                  "slidesPerView": 2,
                  "slidesPerColumn": {{ section.settings.slides_per_column | at_most: 2 }},
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "768": {
                  "slidesPerView": {{ per_row | at_most: 3 }},
                  "slidesPerColumn": {{ section.settings.slides_per_column | at_most: 2 }},
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "992": {
                  "slidesPerView": {{ per_row | at_most: 4 }},
                  "slidesPerColumn": 2,
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "1200": {
                  "slidesPerView": {{ per_row | at_most: 4 }},
                  "slidesPerColumn": {{ section.settings.slides_per_column }},
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "1700": {
                  "slidesPerView": {{ per_row }},
                  "slidesPerColumn": {{ section.settings.slides_per_column }},
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                }
              }
            }
          </script>
        </swiper-carousel>
      {%- elsif section.settings.layout == 'max_horizontal'  -%}
        <swiper-carousel>
          <div class="swiper-container swiper-container-prd-carousel swiper-container-center">
            <div class="swiper-wrapper">
              {%- for product in collections[section.settings.collection].products limit: section.settings.limit -%}
                <div class="swiper-slide">{% render 'product-card-horizontal', product: product, vendor: 1 %}</div>
              {%- else -%}
                {%- for i in (1..10) -%}
                  {% render 'product-placeholder', padding: 68 %}
                {%- endfor -%}
              {%- endfor -%}
            </div>
            <div class="swiper-pagination position-relative mt-4 mt-md-5"></div>
            <div class="swiper-arrows-carousel container">
              <div class="swiper-button-next"></div>
              <div class="swiper-button-prev"></div>
            </div>
          </div>
          <script type="application/json">
            {
              "pagination": {
                "el": ".swiper-pagination",
                "clickable": true
              },
              "navigation": {
                "nextEl": ".swiper-button-next",
                "prevEl": ".swiper-button-prev"
              },
              "slidesPerColumnFill": "row",
              "watchOverflow": true,
              "slidesPerView": 1,
              "slidesPerColumn": 1,
              "spaceBetween": 20,
              "centerInsufficientSlides": true,
              "breakpoints": {
                "{{ settings.product_card_one_in_row_width }}": {
                  "slidesPerView": 1,
                  "slidesPerColumn": 1,
                  "spaceBetween": 20
                },
                "768": {
                  "slidesPerView": 2,
                  "slidesPerColumn": {{ section.settings.slides_per_column }},
                  "spaceBetween": 20,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "1200": {
                  "slidesPerView": {{ per_row | at_most: 3 }},
                  "slidesPerColumn": {{ section.settings.slides_per_column }},
                  "spaceBetween": 30,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                },
                "1600": {
                  "slidesPerView": {{ per_row }},
                  "slidesPerColumn": {{ section.settings.slides_per_column }},
                  "spaceBetween": 30,
                  "centerInsufficientSlides": {{ centerInsufficientSlides }}
                }
              }
            }
          </script>
        </swiper-carousel>
      {%- elsif section.settings.layout contains 'fixed_banner'  -%}
        <div class="row flex-column-reverse flex-md-row{% if section.settings.layout contains 'reversed' %}-reverse{% endif %} row-under-title gy-6">
            <div class="col-xs-6 col-md-4 col-lg-3">
                <flow-type>
                    <a href="{{ section.settings.button_url }}" class="bnr-wrap bnr-wrap--fixed">
                          <div class="bnr image-hover-scale to-center to-{% if section.settings.layout contains 'reversed' %}top{% else %}bottom{% endif %} text-center bnr--style-8 fontratio-calc" data-fontratio="4.2">
                          {% render 'image-container',
                            image: section.settings.image,
                            padding_no_bg: 229,
                            padding: 229,
                            sizes: '264px',
                            class_ic: 'bnr-img',
                            style: ic_style
                          %}
                          {%- if section.settings.banner_title != blank -%}
                            <div class="bnr-caption {% if section.settings.invert_color %}colorize-invert{% endif %}" style="--padding: 25% 0; --padding-mobile: 25% 0; --caption-width: 80%; --caption-width-mobile: 80%; opacity: 1;">
                              <div class="bnr-text1 heading-font mt-md mt-first-0 fw-bold">{{ section.settings.banner_title }}</div>
                            </div>
                          {%- endif -%}
                        </div>
                    </a>
                </flow-type>
            </div>

            <div class="col-xs-6 col-md-8 col-lg-9">
                <div class="prd-grid row row-cols-xxs-1 row-cols-2 row-cols-sm-2 row-cols-lg-3 g-3 g-md-4">
                  {%- for product in collections[section.settings.collection].products limit: section.settings.limit -%}
                    <div class="col">{% render 'product-card', product: product, collection: section.settings.collection %}</div>
                    <div class='line-break'></div>
                  {%- else -%}
                    {%- for i in (1..section.settings.limit) -%}
                      {% render 'product-placeholder', class: 'col' %}
                    {%- endfor -%}
                  {%- endfor -%}
                </div>
            </div>
        </div>
      {%- endif -%}
    {%- endif -%}

    {%- if button_center or button_left -%}
      <div class="btn-showmore-wrap text-center mt-3 mt-lg-6  {% if button_left %}show-mobile-sm{% endif %}">
        <a href="{{ section.settings.button_url }}" class="btn btn--invert btn--showmore">{{ section.settings.button_text }}</a>
      </div>
    {%- endif -%}
  </div>
</div>
{% render 'section-wrapper' %}

{% schema %}
