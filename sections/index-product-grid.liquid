      "label": "Reversed for 'Mini horizontal with banner'",
      "default": false
    },
    {
      "type": "range",
      "id": "limit",
      "min": 3,
      "max": 12,
      "step": 1,
      "label": "Limit products",
      "default": 8
    },
    {
      "type": "select",
      "id": "per_row",
      "label": "Per row",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "5",
          "label": "5"
        },
