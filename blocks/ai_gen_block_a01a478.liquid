{% doc %}
  @prompt
    make the component for the text block their should i add the shipping information 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-info-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-shipping-info__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipping-info__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: {{ block.settings.line_height }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipping-info__content-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} ul,
  .ai-shipping-info__content-{{ ai_gen_id }} ol {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px;
    padding-left: 20px;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} strong {
    font-weight: 600;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-shipping-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top_mobile }}px {{ block.settings.padding_horizontal_mobile }}px {{ block.settings.padding_bottom_mobile }}px;
    }

    .ai-shipping-info__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-shipping-info__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-shipping-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-shipping-info__heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h2>
  {% endif %}

  {% if block.settings.content != blank %}
    <div class="ai-shipping-info__content-{{ ai_gen_id }}">
      {{ block.settings.content }}
    </div>
  {% endif %}
</div>

