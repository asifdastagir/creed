{% doc %}
  @prompt
    generate the text block i want put about the matrial information with the images

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-material-info-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-material-info-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-material-info-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {% if block.settings.layout == 'image_left' %}1fr 1fr{% elsif block.settings.layout == 'image_right' %}1fr 1fr{% else %}1fr{% endif %};
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .ai-material-info-text-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_right' %}order: 1;{% endif %}}

  .ai-material-info-image-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_right' %}order: 2;{% endif %}
  }

  .ai-material-info-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-material-info-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
  }

  .ai-material-info-features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-material-info-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: {{ block.settings.feature_spacing }}px;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-material-info-feature-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    margin-top: 2px;
    color: {{ block.settings.accent_color }};
  }

  .ai-material-info-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-material-info-image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-material-info-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-material-info-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-material-info-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-material-info-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.content_gap | times: 0.75 }}px;
    }

    .ai-material-info-text-{{ ai_gen_id }},
    .ai-material-info-image-{{ ai_gen_id }} {
      order: unset;
    }

    .ai-material-info-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-material-info-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-material-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-material-info-container-{{ ai_gen_id }}">
    <div class="ai-material-info-content-{{ ai_gen_id }}">
      <div class="ai-material-info-text-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-material-info-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-material-info-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}

        {% if block.settings.show_features %}
          <ul class="ai-material-info-features-{{ ai_gen_id }}">
            {% if block.settings.feature_1 != blank %}
              <li class="ai-material-info-feature-{{ ai_gen_id }}">
                <svg class="ai-material-info-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
                <span>{{ block.settings.feature_1 }}</span>
              </li>
            {% endif %}

            {% if block.settings.feature_2 != blank %}
              <li class="ai-material-info-feature-{{ ai_gen_id }}">
                <svg class="ai-material-info-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
                <span>{{ block.settings.feature_2 }}</span>
              </li>
            {% endif %}

            {% if block.settings.feature_3 != blank %}
              <li class="ai-material-info-feature-{{ ai_gen_id }}">
                <svg class="ai-material-info-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
                <span>{{ block.settings.feature_3 }}</span>
              </li>
            {% endif %}

            {% if block.settings.feature_4 != blank %}
              <li class="ai-material-info-feature-{{ ai_gen_id }}">
                <svg class="ai-material-info-feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20,6 9,17 4,12"></polyline>
                </svg>
                <span>{{ block.settings.feature_4 }}</span>
              </li>
            {% endif %}
          </ul>
        {% endif %}
      </div>

      {% if block.settings.layout != 'text_only' %}
        <div class="ai-material-info-image-{{ ai_gen_id }}"><div class="ai-material-info-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image %}
              <img
                src="{{ block.settings.image | image_url: width: 800 }}"
                alt="{{ block.settings.image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% else %}
              <div class="ai-material-info-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
                <div class="ai-material-info-empty-state-{{ ai_gen_id }}">
                  Add an image to showcase your material
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

