{% doc %}
  @prompt
    make the section to have add column of an image and title right of image, I need to add multiple columns, add the section padding and margin

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-column-block-{{ ai_gen_id }} {
    margin-top: {{ block.settings.section_margin_top }}px;
    margin-bottom: {{ block.settings.section_margin_bottom }}px;
    padding-top: {{ block.settings.section_padding_top }}px;
    padding-bottom: {{ block.settings.section_padding_bottom }}px;
    padding-left: {{ block.settings.section_padding_horizontal }}px;
    padding-right: {{ block.settings.section_padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-multi-column-block__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-multi-column-block__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_spacing }}px;
  }

  .ai-multi-column-block__column-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.content_spacing }}px;
    padding: {{ block.settings.column_padding }}px;
    background-color: {{ block.settings.column_background_color }};
    border-radius: {{ block.settings.column_border_radius }}px;
  }

  .ai-multi-column-block__image-container-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}px;
    width: {{ block.settings.image_width }}px;
  }

  .ai-multi-column-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-multi-column-block__image-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1/1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-multi-column-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-multi-column-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-multi-column-block__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
  }

  .ai-multi-column-block__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-multi-column-block__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-multi-column-block__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-multi-column-block__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-multi-column-block-{{ ai_gen_id }} {
      padding-left: {{ block.settings.section_padding_horizontal | divided_by: 2 }}px;
      padding-right: {{ block.settings.section_padding_horizontal | divided_by: 2 }}px;
      padding-top: {{ block.settings.section_padding_top | times: 0.8 }}px;
      padding-bottom: {{ block.settings.section_padding_bottom | times: 0.8 }}px;
    }

    .ai-multi-column-block__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.column_spacing | divided_by: 2 }}px;
    }

    .ai-multi-column-block__column-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      text-align: {% if block.settings.mobile_layout == 'column' %}center{% else %}left{% endif %};
    }

    .ai-multi-column-block__image-container-{{ ai_gen_id }} {
      flex: none;
      width: 100%;
      max-width: 200px;
      {% if block.settings.mobile_layout == 'column' %}margin: 0 auto;{% endif %}
    }

    .ai-multi-column-block__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-multi-column-block__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-multi-column-block__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}<div class="ai-multi-column-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-column-block__container-{{ ai_gen_id }}">
    <div class="ai-multi-column-block__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'image_' | append: i
          assign title_key = 'title_' | append: i
          assign description_key = 'description_' | append: i
          assign button_text_key = 'button_text_' | append: i
          assign button_link_key = 'button_link_' | append: i

          assign image = block.settings[image_key]
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
          assign button_text = block.settings[button_text_key]
          assign button_link = block.settings[button_link_key]

          assign has_content = false
          if image != blank or title != blank or description != blank
            assign has_content = true
          endif
        %}

        {% if has_content %}
          <div class="ai-multi-column-block__column-{{ ai_gen_id }}">
            <div class="ai-multi-column-block__image-container-{{ ai_gen_id }}">
              {% if image %}
                <img
                  src="{{ image | image_url: width: 400 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-multi-column-block__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-multi-column-block__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}<div class="ai-multi-column-block__empty-state-{{ ai_gen_id }}">
                    Add image {{ i }}
                  </div>
                </div>
              {% endif %}
            </div>

            <div class="ai-multi-column-block__content-{{ ai_gen_id }}">
              {% if title != blank %}
                <h3 class="ai-multi-column-block__title-{{ ai_gen_id }}">{{ title }}</h3>
              {% endif %}

              {% if description != blank %}
                <div class="ai-multi-column-block__description-{{ ai_gen_id }}">
                  {{ description }}
                </div>
              {% endif %}

              {% if button_text != blank and button_link != blank %}
                <a
                  href="{{ button_link }}"
                  class="ai-multi-column-block__button-{{ ai_gen_id }}"
                >
                  {{ button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

