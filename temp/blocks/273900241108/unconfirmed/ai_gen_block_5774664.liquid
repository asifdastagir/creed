{% doc %}
  @prompt
    make the section to have add column of an image and title right of image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-block-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-image-text-block__image-container-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    max-width: {{ block.settings.image_width }}%;}

  .ai-image-text-block__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-image-text-block__image-placeholder-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-image-text-block__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-text-block__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-text-block__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.text_spacing }}px;
  }

  .ai-image-text-block__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    line-height: 1.3;
  }

  .ai-image-text-block__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
  }

  .ai-image-text-block__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-image-text-block__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-image-text-block-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.spacing | divided_by: 2 }}px;
    }

    .ai-image-text-block__image-container-{{ ai_gen_id }} {
      flex: none;
      max-width: 100%;
    }

    .ai-image-text-block__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-image-text-block__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-image-text-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-image-text-block__image-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 800 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-image-text-block__image-{{ ai_gen_id }}"loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-image-text-block__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-text-block__empty-state-{{ ai_gen_id }}">
          Add an image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-image-text-block__content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-image-text-block__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-image-text-block__description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-image-text-block__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

