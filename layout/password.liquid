{%- # theme-check-disable NestedSnippet, LiquidHTMLSyntaxError -%}
<!doctype html>
<html class="no-js full-height" lang="{{ request.locale.iso_code }}">
  <head>
    {% render 'head' %}
    {{ content_for_header }}
  </head>
  <body
    {% unless settings.rounded_disable == "1" %}
    class="has-rounded"
    {% endunless %}
    data-tooltip-color="dark"
    data-tooltip-animation="shift-toward"
    data-tooltip-delay="100">
    <a class="skip-to-content-link btn visually-hidden" href="#MainContent">
      {{ 'accessibility.skip_to_text' | t }}
    </a>
    <div id="control-height" style="height: 100vh;  width: 0;  position: absolute;"></div>

    {{ content_for_layout }}

    <script src="{{ 'coming-soon.js' | asset_url }}" defer></script>
    <ul hidden>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>
    {% render 'before-body-end' %}
  </body>
</html>