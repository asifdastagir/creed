{%- comment -%}theme-check-disable AssetPreload,RemoteAsset{%- endcomment -%}
{%- if settings.font_source == '3' or settings.font_source_headings == '3' -%}
	<link href="{{ 'font.css' | asset_url }}" rel="stylesheet">
{%- endif -%}
{%- if settings.font_source == '3' -%}
  {% style %}
    :root {
      --body-font-family: {{ settings.font_general_custom }};
    }
  {% endstyle %}
{%- endif -%}
{%- if settings.font_source_headings == '3' -%}
  {% style %}
    :root {
      --heading-font-family: {{ settings.font_headings_custom }};
    }
  {% endstyle %}
{%- endif -%}


{%- if settings.font_source == '2' -%}
  {%- liquid
    case settings.font_general_google_preset
      when "1"
        assign font_general_google_preset = 'Open Sans'
      when "2"
        assign font_general_google_preset = 'Rubik'
      when "3"
        assign font_general_google_preset = 'Asap Condensed'
      when "4"
        assign font_general_google_preset = 'Poppins'
      when "5"
        assign font_general_google_preset = 'Quicksand'
    endcase
  -%}
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family={{ settings.font_general_google | default: font_general_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  <link rel="stylesheet" media="print" onload="this.onload=null;this.removeAttribute('media');" href="https://fonts.googleapis.com/css2?family={{ settings.font_general_google | default: font_general_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  <noscript>
    <link rel="stylesheet" as="style" href="https://fonts.googleapis.com/css2?family={{ settings.font_general_google | default: font_general_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  </noscript>
  {% style %}
    :root {
      --body-font-family: {{ settings.font_general_google | default: font_general_google_preset }};
    }
  {% endstyle %}
{%- endif -%}

{%- if settings.font_source_headings == '2' -%}
  {%- liquid
    case settings.font_headings_google_preset
      when "1"
        assign font_headings_google_preset = 'Open Sans'
      when "2"
        assign font_headings_google_preset = 'Rubik'
      when "3"
        assign font_headings_google_preset = 'Asap Condensed'
      when "4"
        assign font_headings_google_preset = 'Poppins'
      when "5"
        assign font_headings_google_preset = 'Quicksand'
    endcase
  -%}
  <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family={{ settings.font_headings_google | default: font_headings_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  <link rel="stylesheet" media="print" onload="this.onload=null;this.removeAttribute('media');" href="https://fonts.googleapis.com/css2?family={{ settings.font_headings_google | default: font_headings_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  <noscript>
    <link rel="stylesheet" as="style" href="https://fonts.googleapis.com/css2?family={{ settings.font_headings_google | default: font_headings_google_preset }}:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap">
  </noscript>
  {% style %}
    :root {
      --heading-font-family: {{ settings.font_headings_google | default: font_headings_google_preset }};
    }
  {% endstyle %}
{%- endif -%}

{%- liquid
  assign font_weights = '300,400,500,600,700,800' | split: ','
-%}
{%- if settings.font_source == '1' -%}
    {% style %}
      {%- liquid
        for font_weight in font_weights
          echo settings.font_type_body | font_modify: 'weight', font_weight | font_face: font_display: 'swap'
        endfor
      -%}
      :root {
        --body-font-family: {{ settings.font_type_body.family }}, {{ settings.font_type_body.fallback_families }};
      }
    {% endstyle %}
{%- endif -%}

{%- if settings.font_source_headings == '1' and settings.font_type_header.family != settings.font_type_body.family -%}
    {% style %}
      {%- liquid
        for font_weight in font_weights
          echo settings.font_type_header | font_modify: 'weight', font_weight | font_face: font_display: 'swap'
        endfor
      -%}
      :root {
        --heading-font-family: {{ settings.font_type_header.family }}, {{ settings.font_type_header.fallback_families }};
      }
    {% endstyle %}
{%- endif -%}


