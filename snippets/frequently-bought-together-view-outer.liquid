{% comment %}theme-check-disable NestedSnippet{% endcomment %}
<div class="title-wrap text-center">
  <h2 class="h1-style">{{ 'theme.general.frequently_bought_together' | t }}</h2>
  {%- if settings.fbt_source == 'collection' -%}
    <div class="h-sub w-800">{{ 'theme.general.fbt_description_before' | t }} <button-animated data-pause="10000" data-delay-start="5000" data-delay-after-stop="0" data-style="swing"><span class="icon-animated-wrap">{% render 'icon-gift' %}</span></button-animated></div>
  {%- endif -%}
</div>
<product-form data-multiple data-after-render-events>
  {%- form 'cart', cart, id: product_form_id, novalidate: 'novalidate', action: routes.cart_update_url -%}
    {%- if layout contains 'grid-2' and cart -%}
      <div class="row">
        <div class="col-lg-9">
          <products-card-compact data-grid>
            <div class="products-card-compact">
              {%- if prd_collection -%}
                {% for product in prd_collection.products limit: settings.recommendations_limit %}
                  {% render 'product-card-compact',
                    product_id: product.id,
                    product: product,
                    section: section,
                    product_form_id: product_form_id,
                    counter: counter
                   %}
                {% endfor %}
              {%- endif -%}
            </div>
          </products-card-compact>
        </div>
        <div class="col-lg-3">
          {% render 'error' %}
          <div class="bought-with-actions row align-items-center gx-3 gy-2">
            <div class="col-auto">
              {% render 'frequently-bought-together-component-add-to-cart', counter: counter %}
            </div>
            <div class="col-auto">
              <div class="custom-form">
                {% render 'frequently-bought-together-component-select-checkbox' product_form_id: product_form_id, counter: counter %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- else -%}
      {% render 'frequently-bought-together-view-inner-body',
        layout: layout,
        prd_collection: prd_collection,
        section: section,
        product_form_id: product_form_id,
        counter: counter
      %}
    {%- endif -%}
  {%- endform -%}
</product-form>