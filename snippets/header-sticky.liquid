{% comment %}theme-check-disable NestedSnippet{% endcomment %}
{%- if section.settings.header_sticky -%}
  <header-sticky {% if section.settings.header_sticky_compact == "1" %}class="has-compact-sticky"{% endif %}>
  {%- if section.settings.style == '5' -%}
      <div class="hdr hdr--style5 hide-mobile">
        <div class="hdr-content hdr-content-sticky compensate-for-scrollbar">
          <div class="hdr-topline">
            <div class="container">
              <div class="row align-items-center">
                <div class="col-12 col-md-auto">
                  <div class="hdr-nav nav-holder-s hide-mobile text-center" role="navigation"></div>
                </div>
                <div class="col-auto ms-auto hide-mobile">
                  <div class="row align-items-center gx-5">
                    <div class="col-auto">
                      <div class="hdr-inline-link">
                        {% render 'header-settings-separated', section: section %}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="hdr-content">
            <div class="container">
              <div class="row justify-content-between">
                <div class="col-auto hdr-logo">
                  {%- liquid
                    assign logo = section.settings.logo_sticky | default: section.settings.logo
                  -%}
                  {% render 'logo',
                    logo: logo,
                    svg_logo: section.settings.svg_logo,
                    svg_logo_name: section.settings.svg_logo_name,
                    logo_width: section.settings.logo_sticky_width,
                    logo_width_mobile: section.settings.logo_width_mobile,
                    prefix: 'Sticky',
                    id: section.id,
                    class: 'logo'
                  %}
                </div>
                {% render 'header-layout-5-body', mode: 'sticky' %}
              </div>
            </div>
          </div>
        </div>
      </div>
  {%- else -%}
      <div class="hdr-content hdr-content-sticky hide-mobile compensate-for-scrollbar {% if section.settings.header_sticky_border %}border-divided{% endif %}" id="Sticky-{{ section.id }}">
        <div class="container">
          <div class="row">
            <div class="col-auto hdr-logo">
              {% render 'logo',
                logo: section.settings.logo_sticky | default: section.settings.logo,
                svg_logo: section.settings.svg_logo,
                svg_logo_name: section.settings.svg_logo_name,
                logo_width: section.settings.logo_sticky_width,
                logo_width_mobile: section.settings.logo_width_mobile,
                prefix: 'Sticky',
                id: section.id,
                class: 'logo'
              %}
            </div>
            <div class="hdr-nav hide-mobile nav-holder-s col"></div>
            <div class="hdr-links-wrap col-auto ms-auto">
              <div class="hdr-inline-link">
                {%- liquid
                  render 'header-settings', id1: 'languages-sticky', id2: 'currencies-sticky'
                  render 'header-get-help'
                  if section.settings.style == '2' or section.settings.style == '4' or section.settings.style == '5'
                    render 'header-search'
                  else
                    render 'header-search-icon'
                  endif
                  render 'header-account-icon'
                  render 'header-wishlist-icon'
                  render 'header-cart-icon'
                -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- endif -%}
  </header-sticky>
{%- endif -%}
